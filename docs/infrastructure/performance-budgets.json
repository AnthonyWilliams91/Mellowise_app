{
  "performance_budgets": {
    "version": "1.0.0",
    "last_updated": "2024-01-09",
    "description": "Performance budgets for Mellowise LSAT prep platform based on Context7 research and Sarah's PO validation",
    
    "core_web_vitals": {
      "largest_contentful_paint": {
        "target": 1200,
        "good_threshold": 1500,
        "needs_improvement_threshold": 2500,
        "unit": "milliseconds",
        "description": "Time for largest visible element to fully render"
      },
      "first_input_delay": {
        "target": 30,
        "good_threshold": 50,
        "needs_improvement_threshold": 100,
        "unit": "milliseconds",
        "description": "Time from first user interaction to browser response"
      },
      "cumulative_layout_shift": {
        "target": 0.03,
        "good_threshold": 0.05,
        "needs_improvement_threshold": 0.1,
        "unit": "score",
        "description": "Measure of visual stability during page load"
      }
    },
    
    "page_specific_budgets": {
      "home_dashboard": {
        "lcp_target": 1000,
        "fid_target": 25,
        "cls_target": 0.02,
        "description": "Main user dashboard with progress charts and navigation"
      },
      "survival_mode": {
        "lcp_target": 800,
        "fid_target": 20,
        "cls_target": 0.01,
        "description": "Game interface requiring immediate interactivity"
      },
      "study_session": {
        "lcp_target": 900,
        "fid_target": 25,
        "cls_target": 0.02,
        "description": "Question display and answer interface"
      },
      "ai_tutor_chat": {
        "lcp_target": 1100,
        "fid_target": 30,
        "cls_target": 0.02,
        "description": "Chat interface with AI response loading"
      }
    },
    
    "resource_budgets": {
      "javascript_bundle": {
        "target": 250,
        "unit": "KB_gzipped",
        "description": "Total JavaScript bundle size"
      },
      "css_bundle": {
        "target": 50,
        "unit": "KB_gzipped", 
        "description": "Total CSS bundle size"
      },
      "images_per_page": {
        "target": 500,
        "unit": "KB_total",
        "description": "Total image weight per page"
      },
      "third_party_scripts": {
        "target": 100,
        "unit": "KB_gzipped",
        "description": "External libraries and analytics"
      },
      "total_page_weight": {
        "target": 1024,
        "unit": "KB",
        "description": "Complete page weight including all assets"
      }
    },
    
    "api_performance_budgets": {
      "question_generation": {
        "target": 200,
        "timeout": 5000,
        "unit": "milliseconds",
        "description": "AI question generation response time"
      },
      "authentication": {
        "target": 150,
        "timeout": 3000,
        "unit": "milliseconds",
        "description": "User login/logout operations"
      },
      "progress_tracking": {
        "target": 100,
        "timeout": 2000,
        "unit": "milliseconds",
        "description": "Save user progress and analytics"
      },
      "database_queries": {
        "target": 50,
        "timeout": 1000,
        "unit": "milliseconds",
        "description": "Standard database read/write operations"
      }
    },
    
    "monitoring_thresholds": {
      "warning_levels": {
        "lcp_warning": 1500,
        "fid_warning": 50,
        "cls_warning": 0.05,
        "api_response_warning": 300,
        "error_rate_warning": 0.01
      },
      "critical_levels": {
        "lcp_critical": 2500,
        "fid_critical": 100,
        "cls_critical": 0.1,
        "api_response_critical": 1000,
        "error_rate_critical": 0.05
      },
      "alerting": {
        "notification_channels": ["#mellowise-alerts", "sarah@mellowise.com"],
        "escalation_time": 300,
        "unit": "seconds"
      }
    },
    
    "enforcement_rules": {
      "ci_pipeline": {
        "fail_build_on_budget_exceeded": true,
        "lighthouse_score_threshold": 90,
        "bundle_size_enforcement": true
      },
      "runtime_monitoring": {
        "real_user_monitoring": true,
        "synthetic_monitoring": true,
        "performance_tracking_sampling": 0.1
      }
    },
    
    "device_specific_budgets": {
      "mobile": {
        "lcp_adjustment": 1.2,
        "fid_adjustment": 1.3,
        "network_assumption": "3G",
        "description": "Adjusted targets for mobile devices"
      },
      "desktop": {
        "lcp_adjustment": 1.0,
        "fid_adjustment": 1.0,
        "network_assumption": "broadband",
        "description": "Standard targets for desktop users"
      }
    }
  }
}